---
interface Props {
	introTitle: string;
	// body: string;
	// href: string;
}

interface Expertises{
	text: string
}

interface Props{
	expertises: Expertises[];
}



const {introTitle, expertises } = Astro.props;
---

<section class="hero fade__up">
	<div class="container center">
	  <div class="hero__content fade__up  fade__delay">
		<h1 class="hero__title">{introTitle}</h1>
	</div>
	
	  <div class="hero__tags fade__up  fade__delay">
		<span class="hero__tag">Expertise</span>
		<!-- <span class="hero__tag"><a href="https://www.behance.net/gallery/169500795/Rutole-potholes-detector" target=”_blank”>User Research</a></span>
		<span class="hero__tag">User Experience Design</span>
		<span class="hero__tag">Branding</span> -->
		{expertises.map((expertise)=>(
			<span class="hero__tag">{expertise.text}</span>
		))}
	  </div>
	</div>
  </section>
  <style>

.hero__content{
    margin-bottom: 3em;
  }
  .hero__tag{
    font-size: 1.2rem;
  }
  .hero__tag + .hero__tag{
     margin-left: .5em;
     padding: .5em 1em;
     background-color: var(--clr-light-gray);
     border-radius: 100px;
  }
  </style>
